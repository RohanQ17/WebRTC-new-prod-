{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/send_message", "dest": "/api/send_message.js" },
    { "src": "/get_messages", "dest": "/api/get_messages.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "builds": [
    { "src": "package.json", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ]
}
