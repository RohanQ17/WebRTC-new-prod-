{
  "version": 2,
  "installCommand": "npm install --no-cache",
  "buildCommand": "npm run build",
  "framework": null,
  "outputDirectory": "dist",
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@latest" },
    { "src": "package.json", "use": "@vercel/static-build@latest" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/send_message", "dest": "/api/send_message.js" },
    { "src": "/get_messages", "dest": "/api/get_messages.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
