{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "src/server.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/send_message", "dest": "/api/send_message.js" },
    { "src": "/get_messages", "dest": "/api/get_messages.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ],
  "buildCache": {
    "force": true,
    "timestamp": "2025-08-29-01"
  }
}
